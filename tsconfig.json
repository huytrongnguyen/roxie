{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [ "dom", "esnext" ],
    "jsx": "react",
    "removeComments": true,
    "declaration": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@roxie/core": ["packages/core/lib"],
      "@roxie/components": ["packages/components/lib"],
      "@roxie/ui": ["packages/ui/lib"]
    },
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}